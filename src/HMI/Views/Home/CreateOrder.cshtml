@using HMI.Models.ProjectViewModels;
@model Curtain

@{
}
<body style="background-image: url(../images/bgr.jpg)">
    <br />
    <div class="panel panel-info" style= "text-align: center; background-color: rgba(255, 255, 255, 0.6)">
        <div class="panel-heading">
            <h2>
                Оформить новый заказ
            </h2>
        </div>
        <form asp-controller="Home" asp-action="CreateOrder" method="post" class="form-horizontal" style='margin-left: 300px'>
            
            <div class="panel-body">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Ширина</label>
                    <div class="col-md-10">
                        <input asp-for="Width" class="form-control num input" id="width" placeholder="0.5м-10м" autocomplete="off" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Высота</label>
                    <div class="col-md-10">
                        <input asp-for="Height" class="form-control num input" id="height" placeholder="1м-5м" autocomplete="off"/>
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Материал</label>
                    <div class="col-md-10">
                        <select asp-for="Material" class="form-control" id="material">
                            @foreach (var material in Collections.MaterialsWithPrice.Keys)
                            {
                                <option>@material</option>
                            }
                        </select>
                        <span asp-validation-for="Material" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Цвет</label>
                    <div class="col-md-10">
                        <input asp-for="Color" type="color" class="form-control" id="color" value="#ff0000">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label input">Количество</label>
                    <div class="col-md-10">
                        <input asp-for="Quantity" class="form-control" id="quantity" placeholder="1шт.-50шт." autocomplete="off"/>
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" style="padding-right: 500px">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" class="btn btn-primary priceBtn">Оценить</button>
                        <span id="price"></span>
                    </div>
                </div>
                <div class="form-group" style="padding-right: 500px">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Заказать</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
